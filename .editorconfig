# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md, markdown, eex, mkd}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.bat]
end_of_line = crlf

[{*.eex,*.sht,*.htm,*.html,*.shtm,*.shtml}]
indent_style=space
indent_size=2

[{*.jhm,*.xjb,*.rng,*.wsdl,*.fxml,*.pom,*.xslt,*.jrxml,*.ant,*.svg,*.xul,*.xsl,*.xsd,*.tld,*.jnlp,*.wsdd,*.wadl,*.xml,*.ts,*.tsx}]
indent_style=space
indent_size=4
